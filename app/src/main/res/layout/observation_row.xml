<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding"
        android:background="@drawable/ripple"
        android:clickable="false">

    <TextView
            android:id="@+id/observationDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Headline"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="@dimen/margin_16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
            android:id="@+id/observationNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            style="@style/TextAppearance.AppCompat.Headline"
            app:layout_constraintStart_toEndOf="@id/observationDateTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/observationValueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            style="@style/TextAppearance.AppCompat.Headline"
            app:layout_constraintStart_toEndOf="@id/observationDateTextView"
            app:layout_constraintTop_toBottomOf="@id/observationNameTextView"/>

    <TextView
            android:id="@+id/observationUnitTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            style="@style/TextAppearance.AppCompat.Headline"
            app:layout_constraintStart_toEndOf="@id/observationValueTextView"
            app:layout_constraintTop_toTopOf="@id/observationValueTextView"
            app:layout_constraintBottom_toBottomOf="@id/observationValueTextView"/>
</android.support.constraint.ConstraintLayout>